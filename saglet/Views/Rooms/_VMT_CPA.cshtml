@model IEnumerable<SAGLET.Models.CriticalActionPoints>

<div class="table-wrapper">
    <table class="table">
        <tr>
            <th class="th-reviewed">Reviewd?</th>
            <th>Time</th>
            <th>Trigger</th>
            <th>User</th>
            <th>Type</th>
            <th>Priority</th>
            <th>Feedback</th>
        </tr>
        @foreach (SAGLET.Models.CriticalActionPoints cpa in Model)
        {
            String likeSelected = "";
            String unlikeSelected = "";
            string seenSelected = "";
            string status = "unseen";
            string seenIcon = "icon-android-done";
            if (cpa.Like != null)
            {
                if (cpa.Like == true) { likeSelected = "selected"; }
                else { unlikeSelected = "selected"; }
                status = "seen";
                seenSelected = "selected";
                seenIcon = "icon-android-done-all";
            }

            <tr class="cp-act-@cpa.TabID-@cpa.ActionID-@cpa.Type" data-status="@status" data-roomid="@cpa.Action.Tab.GroupID" data-priority="@cpa.Priority">
                <td><i class="cp-skip @seenIcon @seenSelected"></i></td>
                <td>@cpa.Action.TimeStamp.ToShortTimeString()</td>
                <td><i class="cp-goto icon-flash"></i></td>
                <td>@cpa.Action.UserID</td>
                <td>@cpa.Type</td>
                <td>@cpa.Priority</td>

                <td>
                    <i class="cp-like icon-like @likeSelected"></i>
                    <i class="cp-unlike icon-unlike @unlikeSelected"></i>                   
                </td>
            </tr>
        }
    </table>
</div>



